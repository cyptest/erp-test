<div class="row-fluid">
<div class="span12">

  <div class="hero-unit">

<h2>Sign in</h2>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class => "btn btn-primary" %>
  </div>
<% end %>

</div><!--/span-->
</div>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>