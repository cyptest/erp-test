<%= render 'pages/menu' %>

<div class="span9">

    <h2><%= @product.name %></h2>
    <span class="ref"><%= @product.ref %></span>
    <span class="description"><%= @product.description %></span>

    <nav>
      <ul>
      <li><%= link_to 'back', products_path %></li>
      <li><%= link_to 'Edit', edit_product_path(@product), :method => :edit %></li>
      <li><%= button_to 'Delete', @product, :method => :delete,
                                         :confirm => 'You sure?',
                                         :title => @product.name,
                                         :class => 'btn btn-primary' %></li>
      </ul>
  	</nav>    

</div><!--/span-->
</div><!--/row-fluid-->