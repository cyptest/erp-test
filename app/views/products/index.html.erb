<%= render 'pages/menu' %>

<div class="span9">

<h2>List products</h2>
<nav>
<ul>
    <li>
    <%= link_to 'New', new_product_path, :class => 'btn btn-primary' %></li>
</ul>
</nav>

<% if @products.empty? %>

  <section>
      <em>No products found</em>
  </section>

<% else %>

  <div class="giant-btn">
      <%= form_tag products_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search], :class => 'input-giant' %>
          <%= submit_tag "Search", :name => nil, :class => 'btn btn-primary' %>
        </p>
      <% end %>
  </div>

  <% if params[:search].present? %>
    	<%= render @productsearch %>  

  <% else %>

  	<%= will_paginate %>

  	  <%= render @products %>

  	<%= will_paginate %>

  <% end %>

<% end %>

</div><!--/span-->
</div><!--/row-fluid-->